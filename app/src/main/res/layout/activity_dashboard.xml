                        android:layout_height="wrap_content"
                        android:elevation="@dimen/_10sdp"
                        android:layout_marginTop="-28dp"
                        android:visibility="gone"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
