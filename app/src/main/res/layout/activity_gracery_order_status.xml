<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:background="@color/splashcolor">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/_10sdp"
                android:src="@drawable/black_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textAllCaps="false"
                android:layout_centerInParent="true"
                android:text="@string/order_status"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/light_black"/>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swiplayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/vi"
                    android:layout_below="@id/li"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"/>

                <View
                    android:layout_above="@+id/vi"
                    android:layout_width="2dp"
                    android:elevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_80sdp"
                    android:background="#CB03A679"
                    android:layout_marginLeft="@dimen/_37sdp"/>

                <LinearLayout
                    android:id="@+id/li"
                    android:elevation="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/orderPlaceCheck"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/time_green"/>

                        <TextView
                            android:id="@+id/tvPlacedTime"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/splashcolor"
                            android:textSize="@dimen/_13sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_placed"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_received_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:elevation="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/readyCheck"
                            android:elevation="@dimen/_15sdp"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/res_icon_green"/>

                        <TextView
                            android:id="@+id/tvResTime"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/splashcolor"
                            android:textSize="@dimen/_13sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_ready_tag"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_ready"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:elevation="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/devAcceptCheck"
                            android:elevation="@dimen/_15sdp"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/dev_green_icon"/>

                        <TextView
                            android:id="@+id/tvDevAcceptTime"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/splashcolor"
                            android:textSize="@dimen/_13sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/accept_by_delivery"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_accept_dev_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/devPivkupCheck"
                            android:elevation="@dimen/_15sdp"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/scotor_green_icon"/>

                        <TextView
                            android:id="@+id/tvDevPickupTime"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/splashcolor"
                            android:textSize="@dimen/_13sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/on_the_way"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_on_the_way_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/deliveredCheck"
                            android:elevation="@dimen/_15sdp"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="@dimen/_40sdp"
                            android:src="@drawable/green_check"/>

                        <TextView
                            android:id="@+id/tvDeliveredTime"
                            android:layout_width="0dp"
                            android:layout_weight="0.2"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:textStyle="bold"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:textColor="@color/splashcolor"
                            android:textSize="@dimen/_13sdp"
                            android:textAllCaps="false"
                            android:gravity="center"
                            android:layout_centerInParent="true" />

                        <View
                            android:layout_width="@dimen/_1sdp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:background="@color/gray"/>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="0.6"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:textStyle="bold"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_13sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/delivered"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginLeft="@dimen/_10sdp"
                                android:textColor="@color/light_black"
                                android:textSize="@dimen/_12sdp"
                                android:textAllCaps="false"
                                android:layout_centerInParent="true"
                                android:text="@string/order_delivered_text"/>

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btFeedback"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textColor="@color/white"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/button_back_green_10"
                        android:text="@string/give_rating"/>

                </LinearLayout>

            </RelativeLayout>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </LinearLayout>


</layout>