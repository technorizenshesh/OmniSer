                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_20sdp"
                        android:src="@drawable/translate_icon"/>

                </RelativeLayout>

                    <RelativeLayout
