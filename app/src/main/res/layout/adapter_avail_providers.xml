<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:elevation="@dimen/_10sdp"
        app:contentPadding="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivServiceImage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/profile"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvProviderName"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"
                            android:text="Jhon Duo"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp" />

                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:rating="5"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:isIndicator="false" />
                    </LinearLayout>

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="5"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tvProviderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="403, Sapna Sangeeta Road, VAshali Nagar Indore MP"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_centerInParent="true"
                android:drawableLeft="@drawable/ic_blue_location"
                android:textSize="@dimen/_10sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="@string/rate_per_hr"/>

                <TextView
                    android:id="@+id/tvProviderPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:text="$50"/>

            </LinearLayout>

            <TextView
                android:id="@+id/btConfirm"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/status_back_grad"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/white"
                android:text="Confirm"/>

            <TextView
                android:id="@+id/btPayNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:textStyle="bold"
                android:gravity="center"
                android:visibility="gone"
                android:background="@drawable/status_back_grad"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_10sdp"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/white"
                android:text="@string/pay_now"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>