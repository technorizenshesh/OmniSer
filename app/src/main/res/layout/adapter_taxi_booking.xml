<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp"
        android:elevation="@dimen/_40sdp"
        android:layout_margin="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            android:background="@drawable/darkgreen_back_5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="@string/taxi_booking"
                android:layout_marginBottom="@dimen/_5sdp"
                android:textColor="@color/white"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:background="@drawable/edit_outline_gray"
                android:textSize="@dimen/_12sdp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvDateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 June 2019, 18:39"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CANCELLED"
                    android:textAllCaps="true"
                    android:textColor="@color/red"
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/white"
                android:layout_marginTop="@dimen/_10sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_below="@+id/ivMenu"
                    android:padding="@dimen/_5sdp"
                    android:layout_weight=".9">

                    <TextView
                        android:id="@+id/tvFromTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:39"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp" />

                    <TextView
                        android:id="@+id/tvToTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18:39"
                        android:visibility="gone"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:layout_below="@id/view1"
                        android:layout_marginTop="-8dp" />

                    <ImageView
                        android:id="@+id/ivfrom"
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="@dimen/_6sdp"
                        android:background="@drawable/small_blue_circle"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_toRightOf="@+id/tvFromTime" />

                    <TextView
                        android:id="@+id/tvFrom"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1, Thrale Street,\n London, SE19HW, UK"
                        android:layout_toRightOf="@+id/ivfrom"
                        android:layout_marginLeft="@dimen/_8sdp"
                        android:backgroundTint="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textColor="@color/white" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@color/white"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_below="@+id/ivfrom"
                        android:layout_marginVertical="@dimen/_2sdp"
                        android:layout_toRightOf="@+id/tvFromTime" />

                    <ImageView
                        android:id="@+id/ivto"
                        android:layout_below="@+id/view1"
                        android:layout_width="@dimen/_6sdp"
                        android:layout_height="@dimen/_6sdp"
                        android:background="@drawable/down_arrow"
                        android:layout_toRightOf="@+id/tvFromTime" />

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_toRightOf="@id/view1"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_below="@+id/tvFrom"
                        android:layout_marginTop="@dimen/_15sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/view2"
                        android:layout_toRightOf="@id/ivto">

                        <TextView
                            android:id="@+id/tvDestination"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Ealing Broadway Shopping \n Centre, London, W55JY, UK"
                            android:inputType="none"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:textSize="@dimen/_12sdp"
                            android:maxLines="2"
                            android:ellipsize="end"
                            android:backgroundTint="@color/white"
                            android:textColor="@color/white" />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".1">

                    <ImageView
                        android:id="@+id/GoDetail"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/right_arrow_white" />

                </RelativeLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btPayNow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/button_blue_10"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/pay_now" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btGiveFeedback"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:background="@drawable/button_blue_10"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="@string/give_feedback" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</layout>