                                android:layout_marginTop="@dimen/_5sdp"
                                android:gravity="center"
                                android:layout_marginRight="@dimen/_10sdp"
                                android:layout_alignParentRight="true"
                                android:text="@string/home_cleaning"/>


                        </LinearLayout>

                        <LinearLayout
