<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_10sdp"
        app:contentPadding="@dimen/_5sdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/resImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="@dimen/_10sdp"
                    android:src="@drawable/mcdonals_img"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/vOnOff"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@drawable/green_oval"/>

                    <TextView
                        android:id="@+id/resName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mc Donald\'s"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/black"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

                <TextView
                    android:id="@+id/resdesp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fast Food, Burger, Pizza"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RatingBar
                        android:id="@+id/rbRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:rating="5"
                        style="@style/Widget.AppCompat.RatingBar.Small"/>

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5.0"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:textColor="@color/colorAccent"
                        android:inputType="textVisiblePassword" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vijay Nagar Indore MP"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:drawableLeft="@drawable/ic_blue_location"
                    android:textSize="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:inputType="textVisiblePassword" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivLike"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/ic_heart_redicon"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>