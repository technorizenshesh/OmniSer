                android:layout_height="wrap_content"
                android:textSize="@dimen/_18sdp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/items_details"/>

        </RelativeLayout>

